import requests
from bs4 import BeautifulSoup
import json
import csv

# –°–ø–∏—Å–æ–∫ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ–º—ã—Ö –∫—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç
SUPPORTED_CRYPTO = {
    "BTC": "Bitcoin",
    "ETH": "Ethereum",
    "ADA": "Cardano",
    "XRP": "XRP",
    "DOGE": "Dogecoin",
    "LTC": "Litecoin",
    "BNB": "Binance Coin",
    "SOL": "Solana",
    "DOT": "Polkadot",
    "AVAX": "Avalanche"
}

def fetch_news(crypto_symbol, keyword=None):
    """
    –ü–æ–ª—É—á–∞–µ—Ç –ø–æ—Å–ª–µ–¥–Ω–∏–µ –Ω–æ–≤–æ—Å—Ç–∏ –ø–æ —É–∫–∞–∑–∞–Ω–Ω–æ–π –∫—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç–µ —Å Google News.
    """
    if crypto_symbol not in SUPPORTED_CRYPTO:
        raise ValueError("–ö—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç–∞ –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è. –í—ã–±–µ—Ä–∏—Ç–µ –∏–∑: " + ", ".join(SUPPORTED_CRYPTO.keys()))
    
    query = SUPPORTED_CRYPTO[crypto_symbol] + " cryptocurrency news"
    if keyword:
        query += " " + keyword
    
    url = f"https://www.google.com/search?q={query}&tbm=nws"
    headers = {"User-Agent": "Mozilla/5.0"}
    response = requests.get(url, headers=headers)
    
    if response.status_code != 200:
        raise Exception(f"–û—à–∏–±–∫–∞ –∑–∞–ø—Ä–æ—Å–∞: {response.status_code}")
    
    soup = BeautifulSoup(response.text, "html.parser")
    articles = soup.find_all("div", class_="BNeawe vvjwJb AP7Wnd")
    links = soup.find_all("a", href=True)
    
    news_list = []
    for i in range(min(5, len(articles))):  # –ë–µ—Ä—ë–º 5 –Ω–æ–≤–æ—Å—Ç–µ–π
        title = articles[i].text
        link = "https://www.google.com" + links[i]['href']
        news_list.append({"title": title, "link": link})
    
    return news_list


def save_to_json(news_list, filename):
    """–°–æ—Ö—Ä–∞–Ω—è–µ—Ç –Ω–æ–≤–æ—Å—Ç–∏ –≤ JSON-—Ñ–∞–π–ª."""
    with open(filename, "w", encoding="utf-8") as file:
        json.dump(news_list, file, ensure_ascii=False, indent=4)
    print(f"–î–∞–Ω–Ω—ã–µ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –≤ {filename}")


def save_to_csv(news_list, filename):
    """–°–æ—Ö—Ä–∞–Ω—è–µ—Ç –Ω–æ–≤–æ—Å—Ç–∏ –≤ CSV-—Ñ–∞–π–ª."""
    with open(filename, "w", newline="", encoding="utf-8") as file:
        writer = csv.writer(file)
        writer.writerow(["Title", "Link"])
        for news in news_list:
            writer.writerow([news["title"], news["link"]])
    print(f"–î–∞–Ω–Ω—ã–µ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –≤ {filename}")


if __name__ == "__main__":
    crypto = input("–í–≤–µ–¥–∏—Ç–µ —Å–∏–º–≤–æ–ª –∫—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç—ã (–Ω–∞–ø—Ä–∏–º–µ—Ä, BTC): ").upper()
    keyword = input("–í–≤–µ–¥–∏—Ç–µ –∫–ª—é—á–µ–≤–æ–µ —Å–ª–æ–≤–æ (–∏–ª–∏ –æ—Å—Ç–∞–≤—å—Ç–µ –ø—É—Å—Ç—ã–º): ")
    news = fetch_news(crypto, keyword)
    
    if news:
        print("–ù–∞–π–¥–µ–Ω–Ω—ã–µ –Ω–æ–≤–æ—Å—Ç–∏:")
        for item in news:
            print(f"- {item['title']} ({item['link']})")
        
        save_to_json(news, "crypto_news.json")
        save_to_csv(news, "crypto_news.csv")
    else:
        print("–ù–µ—Ç –Ω–æ–≤–æ—Å—Ç–µ–π –¥–ª—è –¥–∞–Ω–Ω–æ–π –∫—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç—ã.")










import feedparser
import json
import csv

def fetch_news(crypto, keyword=""):
    url = f"https://news.google.com/rss/search?q={crypto}"
    feed = feedparser.parse(url)
    
    news_list = []
    for entry in feed.entries[:5]:  # –ë–µ—Ä—ë–º 5 –Ω–æ–≤–æ—Å—Ç–µ–π
        title = entry.title
        link = entry.link
        published = entry.published
        
        if keyword.lower() in title.lower():
            news_list.append({
                "title": title,
                "link": link,
                "date": published
            })
    
    return news_list

def save_news(news, filename, format="json"):
    if format == "json":
        with open(filename, "w", encoding="utf-8") as f:
            json.dump(news, f, ensure_ascii=False, indent=4)
    elif format == "csv":
        with open(filename, "w", encoding="utf-8", newline="") as f:
            writer = csv.DictWriter(f, fieldnames=["title", "link", "date"])
            writer.writeheader()
            writer.writerows(news)

# üîπ –í–≤–æ–¥ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
crypto = input("–í–≤–µ–¥–∏—Ç–µ —Å–∏–º–≤–æ–ª –∫—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç—ã (–Ω–∞–ø—Ä–∏–º–µ—Ä, BTC): ")
keyword = input("–í–≤–µ–¥–∏—Ç–µ –∫–ª—é—á–µ–≤–æ–µ —Å–ª–æ–≤–æ (–∏–ª–∏ –æ—Å—Ç–∞–≤—å—Ç–µ –ø—É—Å—Ç—ã–º): ")

news = fetch_news(crypto, keyword)
if news:
    for idx, article in enumerate(news, start=1):
        print(f"{idx}. {article['title']} ({article['date']})")
        print(f"   {article['link']}\n")
    
    save_news(news, "crypto_news.json", format="json")
    save_news(news, "crypto_news.csv", format="csv")
    print("‚úÖ –ù–æ–≤–æ—Å—Ç–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –≤ crypto_news.json –∏ crypto_news.csv")
else:
    print("‚ùå –ù–µ—Ç –Ω–æ–≤–æ—Å—Ç–µ–π –¥–ª—è –¥–∞–Ω–Ω–æ–π –∫—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç—ã.")
